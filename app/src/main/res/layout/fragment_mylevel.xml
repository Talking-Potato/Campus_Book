<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp">
    <!-- 업적 -->
    <TextView
        android:id="@+id/my_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-12dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/my_level_title"
        android:textAppearance="@style/page_title"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/levelAvatar"
            android:layout_width="200dp"
            android:layout_height="240dp"
            android:src="@drawable/level22" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center"
            android:text="당신은\n22학번\n입니다!"
            android:textColor="@color/black"
            android:textSize="30dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/login_box"
                        android:gravity="center"
                        android:text="Lv1. 파릇 파릇 새내기\n0=<Exp<250"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/login_box"
                        android:gravity="center"
                        android:text="Lv2. 나도 이제 헌내기?\n250<=Exp<750"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/login_box"
                        android:gravity="center"
                        android:text="Lv3. ㅡ꼰ㅡ\n750<=Exp<1500"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/login_box"
                        android:gravity="center"
                        android:text="Lv4. 졸작취준토익토플\n1500<=Exp<2500"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/login_box"
                        android:gravity="center"
                        android:text="Lv5. --.. -.. ...- -... -... . .-..\n2500<=Exp"
                        android:textSize="20sp" />

                </LinearLayout>

            </ScrollView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>